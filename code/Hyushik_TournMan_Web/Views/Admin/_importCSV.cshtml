@model Hyushik_TournMan_Web.Classes.ViewModels.ImportCsvViewModel
<div class="row top-buffer">
    <h3>Import Participants CSV</h3>
    <hr />
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="input-group">
            @using (Html.BeginForm("ImportCsv", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.LabelFor(m => m.CsvFile)
                @Html.TextBoxFor(m => m.CsvFile, new { type = "file"})
                @Html.LabelFor(m => m.SelectedTournamentId)
                <div class="input-group">
                    @Html.DropDownListFor(m => m.SelectedTournamentId, Model.TournamentItems, new { @class="form-control input-sm" })
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-sm" value="Add" type="submit">Okay</button>
                    </span>
                </div>
            }
        </div>
     </div>
</div>