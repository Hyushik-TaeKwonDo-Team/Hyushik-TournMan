@model Hyushik_TournMan_Common.Models.ParticipantSelection

<div>

    @Html.HiddenFor(m=>m.RingId)
    @Html.HiddenFor(m=>m.TournId)
    <div>
        <span>Participant Selection</span> 
        @Html.DropDownListFor(m => m.ParticipantId, 
            new SelectList(Model.Participants.OrderBy(p=>p.Name), "ParticipantId", "Name"), 
            "", new { @class="form-control" })
    </div>
    <div>
        <span>Create New Participant:</span> 
        @Html.CheckBoxFor(m=>m.CreateNewParticipant)
    </div>
    <div>
        <span>Name:</span> 
        @Html.TextBoxFor(m=>m.NewParticipantName)
    </div>

</div>